{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "strict": true,
        "target": "es2016"
    },
    "include": ["./src/**/*.ts", "./spec/**/*.ts"],
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "excludeExternals": true,
        "out": "_docs"
    }
}
